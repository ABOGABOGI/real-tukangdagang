<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
               android:layout_marginRight="10dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:id="@+id/imageview"
                android:src="@drawable/sticker"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Nama"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Anggota"
                android:layout_marginLeft="100dp"
                android:textColor="@color/red"
                android:layout_marginTop="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Point"
                android:textSize="17sp"
                android:layout_marginLeft="100dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="60dp"/>
            <Button
                android:id="@+id/btn_jadwal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/round_corner"
                android:text="Atur Pengingat Iuran"
                android:textColor="#fff" />
        </RelativeLayout>
        <android.support.v7.widget.GridLayout

            android:id="@+id/mainGrid3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="3"
            app:columnCount="3"
            android:padding="5dp"
            app:alignmentMode="alignMargins"
            app:columnOrderPreserved="false"
            app:rowCount="1">
            <!-- Column 1 -->
            <android.support.v7.widget.CardView

                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/bg_screen1"
                app:cardElevation="8dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="5dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="5dp"
                        android:orientation="vertical">




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Iuran Wajib"
                            android:textSize="10sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="8,5 Juta"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/google"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="5dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="5dp"
                        android:orientation="vertical">




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Simpanan Sukarela"
                            android:textSize="9sp"

                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="11,8 Juta"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>



            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView

                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/facebook"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="5dp"
                    android:orientation="vertical">




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Investasi Unit Usaha"
                            android:textSize="10sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5 Juta"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                </LinearLayout>



            </android.support.v7.widget.CardView>

        </android.support.v7.widget.GridLayout>


        <com.github.mikephil.charting.charts.LineChart
            android:layout_marginTop="40dp"
            android:id="@+id/linechart"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>


        <android.support.v7.widget.GridLayout

            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="5dp"
            app:columnCount="1"
            app:rowCount="1">

            <!-- Column 1 -->
            <android.support.v7.widget.CardView

                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginTop="0dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="top"
                            android:src="@drawable/koprasi" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp. 2,8 Juta"
                                android:layout_marginLeft="10dp"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Transaksi Bulan Lalu"
                                android:layout_marginLeft="10dp" />
                        </LinearLayout>
                        <ImageView
                            android:layout_marginTop="25dp"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:layout_gravity="top"
                            android:src="@drawable/chart" />

                    </LinearLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView

                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginTop="0dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="top"
                        android:src="@drawable/sticker" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. 1,1 Juta"
                            android:layout_marginLeft="10dp"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Investasi Bulan Lalu"
                            android:layout_marginLeft="10dp" />
                    </LinearLayout>
                    <ImageView
                        android:layout_marginTop="25dp"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_gravity="top"
                        android:src="@drawable/chart" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </android.support.v7.widget.GridLayout>


    </LinearLayout>


</ScrollView>


